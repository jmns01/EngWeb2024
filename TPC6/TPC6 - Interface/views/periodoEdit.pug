extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2= title
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="_id" readonly value=periodo._id)
                label Name
                input.w3-input.w3-round(type="text" name="periodo" value=periodo.periodo)
            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

        footer.w3-container.w3-purple
            h5 
                span Generated by EngWeb2024 in #{date} - [
                a(href="/") Return
                span ]