extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h1=title         
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id")
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Biography
                input.w3-input.w3-round(type="text" name="bio")
                label Birth Date
                input.w3-input.w3-round(type="text" name="bdate")
                label Passing Date
                input.w3-input.w3-round(type="text" name="pdate")
                label Period
                input.w3-input.w3-round(type="text" name="period")

            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

        footer.w3-container.w3-purple
            h5 
                span Generated by EngWeb2024 in #{date} - [
                a(href="/") Return
                span ]