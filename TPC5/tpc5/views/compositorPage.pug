extends layout

block content
    .w3-card-4 
    header.w3-container.w3-teal
        h1 Composer #{compositor.id}

        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                li
                    b Name:
                    span= compositor.nome
                li
                    b Bio: 
                    span= compositor.bio
                li
                    b Birth Date:
                    span= compositor.dataNasc
                li 
                    b Passing Date:
                    span= compositor.dataObito
                li
                    b Period:
                    a(href=compositor.periodo)= compositor.periodo
        
        .w3-container.w3-margin-8
        footer.w3-container.w3-teal
            h5 
                span Gerado por galuno::EngWeb2024 em #{date} - [
                a(href="/compositores") Voltar
                span ]