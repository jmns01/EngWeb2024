extends layout

block content
    .w3-card-4 
        header.w3-container.w3-teal
            h1 
                span #{title} 
                    a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +

        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Period
                    th Actions
                each elem in lista
                    tr
                        td= elem.id
                        td
                            a(href="/periodos/" + elem.id) #{elem.periodo}
                        td
                            span [
                            a(href="/periodos/edit/" + elem.id) Edit
                            span ]
                            span [
                            a(href="/periodos/delete/" + elem.id) Delete
                            span ]
        footer.w3-container.w3-blue
            h5 Generated by EngWeb2024 in #{data}